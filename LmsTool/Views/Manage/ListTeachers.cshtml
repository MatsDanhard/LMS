@using LmsTool.Models.Viewmodels
@model IEnumerable<LmsTool.Models.Viewmodels.ViewTeachers>


@using (Ajax.BeginForm(null, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "frmEdit",
    InsertionMode = InsertionMode.Replace
}, new { @id = "frmID2" }))

{

    <div>
        <div class="container row collapse" id="EditWindow"> 
            <div class="col-xs-2"></div>
            <div class="col-xs-4">

                <div id="frmEdit">

                    @Html.Partial("~/Views/Account/Edit.cshtml", new ViewStudents())


                </div>
            </div>
            <div class="col-xs-4">

            </div>



        </div>
    </div>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Account", new { id = item.Id })" class="btn btn-primary Edit">Redigera</a>
                @*@Html.ActionLink("Edit", "Edit", "Account", null, new { id = item.Id })*@
                @if (Model.Count() > 1)
                {
                    <a href='@Url.Action("Delete", "Account", new { id=item.Id })' class="modal-link btn btn-danger Delete"> Ta bort </a>
                }
            </td>
        </tr>
    }

</table>

<div @*id="modal-container"*@ id="ModalDelete" class="modal fade" tabindex="-1" role="dialog">
    <br />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel2">Ta bort Lärare</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">Avbryt</button>
            </div>
        </div>
    </div>
</div>

