@model LmsTool.Models.DbModels.AssignmentModel


@using (Ajax.BeginForm("CreateAssignment", "activity", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "ModalCreate", OnSuccess = "$('close').click()" }, new { id = Model.ActivityId }))
{
    @Html.AntiForgeryToken()
    
   

    <div class="form-horizontal">
        <h4>Inlämningsuppgift för @Model.Activity.Name som börjar @Model.Activity.StartDate och slutar @Model.Activity.EndDate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
           
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
            
                @Html.TextAreaFor(model => model.Description, 5,60, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Deadline, htmlAttributes: new { @class = "control-label" })
            
                @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
           
        </div>

        @Html.HiddenFor(model => model.ActivityId)
        

        <div class="form-group">
            <div @*class="col-md-offset-2 col-md-10"*@>
                <input type="submit" value="Lägg till" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
   
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
