@model IEnumerable<LmsTool.Models.DbModels.AssignmentModel>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@{
    ViewBag.Title = "AllAssignmentsForStudent";
}

<h1>@ViewBag.StudentName</h1>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity.TypeOfActivity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Submitted)
        </th>
        <th>
            Godkänd@*@Html.DisplayNameFor(model => model.Approved)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>*@
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Activity.TypeOfActivity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <span class="glyphicon glyphicon-info-sign" title="@Html.DisplayFor(modelItem => item.Description)">
            </span>
        </td>
        @if (item.Submitted != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Submitted)
            </td>
        }
        @if (item.Submitted == null)
        {
            <td>Nej</td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Approved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.Document, new { @readonly = true })
            @*@if (item.Document != null)
                {
                @Html.ActionLink(item.Document.ToString(), "Download", new { FileName = item.Document })
            }*@
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>*@
       
    </tr>
}

</table>