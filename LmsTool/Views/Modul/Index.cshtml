@using LmsTool.Models.DbModels
@using LmsTool.Models.Viewmodels
@model IEnumerable<LmsTool.Models.Viewmodels.ViewModuls>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.CourseName</h2>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<p>
   
    @if (ViewBag.Infomodul != null)
    {
        <h3 class="alert alert-success">@ViewBag.InfoModul</h3>
    }
    @if (ViewBag.ErrorModul != null)
    {
        <h3 class="alert alert-warning">@ViewBag.ErrorModul</h3>
    }
    <a href="@Url.Action("Create","Modul", new {id = ViewBag.CurrentCourse})" class="btn btn-success Create">Skapa modul</a>
</p>

@foreach (ViewModuls modul in Model)
{
    <div class="panel panel-info">


        <div class="panel-heading Icon-Fontsize">
            <p class="glyphicon glyphicon-menu-down">&nbsp;</p><div class="btn-group btn-group-lg Settings">
            <a href="@Url.Action("Edit","Modul", new {id = modul.Id})" class="btn btn-primary btn-lg Edit">Redigera</a>
            <a href="@Url.Action("Delete","Modul", new {id = modul.Id})" class="btn btn-danger btn-lg Delete">Ta bort</a>
            </div>&nbsp;<p class="glyphicon glyphicon-pencil  Icon_toggle">&nbsp;</p><a>@modul.Name</a><span class="pull-right">
             @Html.ActionLink("Aktiviter" + " ("+modul.NrOfActivitys+")", "Index", "Activity", new { id = modul.Id }, new { @class = "btn btn-primary btn-lg" })

            </span>

        </div>


        <div class=" panel-body Expandable">
            <div>
                <section class="text-columns">
                    @modul.Description
                </section>
            </div>

        </div>

    </div>

 }


<div class="modal fade" id="ModalCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Skapa Modul</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="">
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">Avbryt</button>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel1">Redigera Modul</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="">
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">Avbryt</button>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel2">Ta bort modul</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="">
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">Avbryt</button>

            </div>
        </div>
    </div>
</div>

<script>
    $('.Expandable').hide();
    $('.Settings').hide();
</script>
<script>
    $(document).ready(

        $(document).on('click', '.glyphicon-pencil', function () {
            $(this).closest('.panel').find(".Settings").toggle("fast", "swing");
            $(this).closest('p.glyphicon-pencil').toggleClass('Icon_toggle glyphicon-menu-left');
        }));
</script>
<script>
    $(document).ready(
        $(document).on('click', '.glyphicon-menu-down', function () {
            $(this).closest('.panel').find(".Expandable").toggle("fast", "swing");
        }));
</script>

<script>
        $(document).ready(function () {
            $('.Create').click(function (event) {
                event.preventDefault();
                $.get(this.href, function (response) {
                    $('.modal-body').html(response);
                });
                $('#ModalCreate').modal({
                    backdrop: 'static',
                }, 'show');
            });
            $('.Edit').click(function (event) {
                event.preventDefault();
                $.get(this.href, function (response) {
                    $('.modal-body').html(response);
                });
                $('#ModalEdit').modal({
                    backdrop: 'static',
                }, 'show');
            });
            $('.Delete').click(function (event) {
                event.preventDefault();
                $.get(this.href, function (response) {
                    $('.modal-body').html(response);
                });
                $('#ModalDelete').modal({
                    backdrop: 'static',
                }, 'show');
            });
        });
</script>